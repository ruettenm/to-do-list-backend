{
    "compilerOptions": {
        "outDir": "./lib",
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "lib": [ "dom", "es7" ]
    },
    "include": [
        "./src/**/*"
    ]
}

